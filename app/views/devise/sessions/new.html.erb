<div class="text-4xl font-extrabold my-16 text-grey">Admin Login</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex flex-col w-fill mb-8">
    <div class="my-2 border-light_grey">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="my-2 border-light_grey">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="my-2 border-light_grey">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
      
    <button class="bg-green px-6 py-2 text-white font-bold mt-6 w-fill">
      <%= f.submit "Log in" %>
    </button>
  </div>
<% end %>

<%= render "devise/shared/links" %>




